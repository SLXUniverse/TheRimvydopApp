    def download(self, url):
        webbrowser.open(url)

    def show_about(self):
        about_text = "This is a simple WebView app using tkinter."
        messagebox.showinfo("About", about_text)

if __name__ == "__main__":
    app = WebViewApp()
    app.mainloop()
