import tkinter as tk
from tkinter import messagebox
import webbrowser

class WebViewApp(tk.Tk):
    def __init__(self):
        super().__init__()
        self.title("The Rimvydop App | v0.2")
        self.geometry("600x400")
        self.iconbitmap("icon.ico")
        self.create_widgets()

    def create_widgets(self):
        title_label = tk.Label(self, text="The Rimvydop App", font=("Helvetica", 24))
        title_label.pack(pady=20)

        instruction_label = tk.Label(self, text="Would you like to choose?", font=("Helvetica", 16))
        instruction_label.pack(pady=10)

        windows_button = tk.Button(self, text="Windows", font=("Helvetica", 16), command=self.open_windows_window)
        windows_button.pack(pady=10)

        android_button = tk.Button(self, text="Android", font=("Helvetica", 16), command=self.open_android_window)
        android_button.pack(pady=10)

        linux_button = tk.Button(self, text="Linux", font=("Helvetica", 16), command=self.open_linux_window)
        linux_button.pack(pady=10)
        
        classic_windows_button = tk.Button(self, text="Classic Windows", font=("Helvetica", 16), command=self.open_classic_windows_window)
        classic_windows_button.pack(pady=10)
        
    def open_android_window(self):
        android_window = tk.Toplevel(self)
        android_window.title("Android | The Rimvydop App")
        android_window.geometry("400x300")
        android_window.iconbitmap("icon.ico")
                
        scrollbar = tk.Scrollbar(android_window)
        scrollbar.pack(side=tk.RIGHT, fill=tk.Y)

        android_text = tk.Text(android_window, wrap=tk.WORD, yscrollcommand=scrollbar.set, spacing1=10, spacing2=5)
        android_text.pack(fill=tk.BOTH, expand=True)

        android_versions = [
            {"name": "Android 9", "size": "605 MB", "url": "https://pixeldrain.com/u/uuMhJGzg"},
            {"name": "Android 6", "size": "436.41 MB", "url": "https://www.mediafire.com/file/hj2z1qb1g6wbgsz/android-x86-6.0-r1.rar/file"},
            {"name": "Android 5.1", "size": "398.06 MB", "url": "https://www.mediafire.com/file/beo46gnzv72ykcd/Android_5.1-rc1.rar/file"},
            {"name": "Android 4.4", "size": "279.81 MB", "url": "https://www.mediafire.com/file/g5jhq1cmjoj2iqc/Android_4.4_RC1.rar/file"},
            {"name": "Android 2.2", "size": "78.74 MB", "url": "https://www.mediafire.com/file/a0m5dgzs1ywxpcs/Android_2.2.rar/file"},
            {"name": "Android 1.6", "size": "201.18 MB", "url": "https://www.mediafire.com/file/4ar5yshyx7b9788/Android_1.6.rar/file"}
        ]

        for version in android_versions:
            android_text.insert(tk.END, f"{version['name']}\t\t{version['size']}\t\t")
            download_button = tk.Button(android_text, text="Download", command=lambda url=version['url']: self.download(url))
            android_text.window_create(tk.END, window=download_button)
            android_text.insert(tk.END, "\n")

        scrollbar.config(command=android_text.yview)

